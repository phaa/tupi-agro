<div class="page-header clear-filter" filter-color="green">
  <div class="page-header-image" style="background-image:url(/img/login2.jpg)"></div>
  <div class="content">
    <div class="container">
      <div class="col-md-4 ml-auto mr-auto">
        <div class="card card-login card-plain">
          <form class="form" method="POST" action="/users/login">
            <div class="card-header text-center">
              <div class="logo-container">
                <img src="/img/now-logo.png" alt="">
              </div>
            </div>
            <div class="card-body">
              <%- include ('./partials/messages') %>
              <div class="input-group no-border input-lg">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                  <i class="now-ui-icons users_single-02"></i>
                  </span>
                </div>
                <input type="email" name="email" class="form-control" placeholder="UsuÃ¡rio...">
              </div>
